def add(a,b):
    return a+b
def subtract(a,b):
    return a-b
def divide(a,b):
    return a/b
def multiply(a,b):
    return a*b
a=float(input("first number:"))
op=input("Enter the operator:")
b=float(input("second number:"))
if op == "+":
    print(add(a,b))
elif op == "-":
    print(subtract(a,b))
elif op == "*":
    print(multiply(a,b))    
elif op == "/":
    try:
        x=divide(a,b)
    except Exception as e:
        print(e)
    else:
        print(x)
else:
    print("Invalid")
